example:
	@echo " "
	@echo "------------------------------------------------------------"
	@echo "EXAMPLE 03 CONFIGURATION: \033[32;1m BUILD \033[0m"
	@echo "------------------------------------------------------------"
	@echo " "

	make libCONSOLE


# =============================================================================================================
#
# BUILD ACTORS
#
# =============================================================================================================


libCONSOLE:
	g++ -c -o CONSOLE.o                     ../src/actors/CONSOLE/CONSOLE.cpp                $(Flag) -fPIC
	g++ -shared -fPIC -o libCONSOLE.so        \
	    CONSOLE.o -fPIC $(Flag)

